@using acebook.Models
@model SettingsViewModel
<head>
    <link rel="stylesheet" href="~/css/Settings.css" asp-append-version="true" />
</head>

<h1 id="title-name">My settings</h1>

<div class="settings-container">
    <!-- Profile Picture Section -->
    <div class="profile-picture">
        <img src="@Url.Content(Model.ProfilePicturePath)" alt="Profile Picture" id="ProfilePicture">
    </div>

    <!-- Settings form  -->
<div class="mysettings-form">
    <h2>Hi, @Model.User.Name</h2>
    <h3>Would you like to change your settings?</h3>

    <form action="/settings" method="post" >
        <label for="name">Name</label>
        <input type="text" id="name" name="name" value="@Model.User.Name" /><br>
        <label for="email">Email</label>
        <input type="email" id="email" name="email" value="@Model.User.Email" /><br>
        <label for="profile_picture">Profile Picture URL</label>
        <input type="url" id="profilepicturepath" name="profilepicturepath" value="@Model.ProfilePicturePath" /><br>
        <input type="submit" id="submit" value="Save changes"/>
    </form>  
</div>
